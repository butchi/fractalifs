extends /_layout/_default-layout

append ConfigBlock
  - pageId = 'index'

//- append StylesheetBlock

//- append JavascriptBlock

block ContentBlock
  h1.title
    | fractalifs

  main
    .container
      canvas.elm-canvas
      svg.ctrl-field(xmlns="http://www.w3.org/2000/svg")

    .panel
      .toolbar
        button.btn-add-generator#btn-add-generator
          i.fa.fa-plus(aria-hidden="true")
        .mdl-tooltip(data-mdl-for="btn-add-generator")
          | ジェネレーター追加

        button.btn-edit#btn-edit
          i.fa.fa-mouse-pointer(aria-hidden="true")
        .mdl-tooltip(data-mdl-for="btn-edit")
          | 頂点編集


        button.btn-undo.under-construction(disabled)
          i.fa.fa-undo(aria-hidden="true")

        button.btn-redo.under-construction(disabled)
          i.fa.fa-repeat(aria-hidden="true")

        button.btn-move.under-construction(disabled)
          i.fa.fa-arrows(aria-hidden="true")

        button.btn-zoom-out.under-construction(disabled)
          i.fa.fa-search-minus(aria-hidden="true")

        button.btn-zoom-in.under-construction(disabled)
          i.fa.fa-search-plus(aria-hidden="true")

      label.snap.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect(for="checkbox-snap")
        input.mdl-checkbox__input#checkbox-snap(type="checkbox", data-js-class="snap")
        span.mdl-checkbox__label
          | グリッドにスナップ

      //- refer: [MDL(Material Design Lite)でSelectボックスを実装する – yamaken – アドテクエンジニア](http://kentayamamoto.github.io/mdl-select/)
      .preset.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-select(data-js-class="preset")
        input#preset__input.mdl-textfield__input(type="text", data-js-class="preset__input")
        label.mdl-textfield__label
          | プリセット
        ul.mdl-menu.mdl-menu--bottom-left.mdl-js-menu.mdl-js-ripple-effect(for="preset__input", data-js-class="preset__list")
          //- li.mdl-menu__item 選択肢1
          //- li.mdl-menu__item 選択肢2
          //- li.mdl-menu__item 選択肢3
          //- li.mdl-menu__item 選択肢4

  footer.footer
    .list-share
      .item
        .fb-like(data-layout="button_count", data-action="like", data-size="small", data-show-faces="false", data-share="true")
      .item
        a.twitter-share-button(href="https://twitter.com/share", data-hashtags="フラクタル")
          | Tweet
        script.
          !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
